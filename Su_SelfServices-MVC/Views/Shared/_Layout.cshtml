<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/scripts/jquery-1.10.2.js", "~/scripts/bootstrap.js")
    @{
            List<MenuTabs> MenuLst = Session["MainTabs"] as List<MenuTabs>;
        }
</head>
<body>
    <form id="MainForm">

        <section id="MainNav" class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-xs-12">
                    <div class="col-xs-2 col-lg-6 col-md-3 ">
                        <img ID="ImgLogo" src="~/Images/su_SelfService.png" Style=" height:60px;margin-top:4%" />
                    </div>
                    <div class="col-xs-10 col-lg-6 col-md-9">
                        <section>
                            <div class="row">
                                <div class="row">
                                    <div class="row ">
                                        <nav class="navbar navbar-default navbar-right">

                                            <!-- Brand and toggle get grouped for better mobile display -->
                                            <div class="navbar-header">
                                                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                                                    <span class="sr-only">Toggle navigation</span>
                                                    <span class="icon-bar"></span>
                                                    <span class="icon-bar"></span>
                                                    <span class="icon-bar"></span>
                                                    <i class="fa fa-bars"></i>
                                                </button>

                                            </div>

                                            <!-- Collect the nav links, forms, and other content for toggling -->
                                            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                                                <ul class="nav navbar-nav">
                                                    <li>
                                                        <a ID="lnkCart">Cart<span class="sr-only">(current)</span></a>
                                                    </li>
                                                    <li>
                                                        <a ID="lnkHelp">Help</a>
                                                    </li>
                                                    <li class="dropdown">
                                                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Select <span class="caret"></span></a>
                                                        <ul class="dropdown-menu">
                                                            <li><a href="#">Catalog</a></li>
                                                            <li><a href="#">Course Section</a></li>

                                                        </ul>
                                                    </li>
                                                </ul>
                                                <div class="navbar-form navbar-right ">
                                                    <div class="form-group">
                                                        <input type="text" class="input-sm form-control" placeholder="Search" />
                                                    </div>
                                                    <a ID="btnSearch" Height="27px">Search</a>

                                                </div>
                                                <ul class="nav navbar-nav navbar-right">
                                                    <li>
                                                        <a ID="lnkLogOut">LogOut</a>
                                                    </li>
                                                </ul>

                                            </div>
                                            <!-- /.navbar-collapse -->
                                            <!-- /.container-fluid -->
                                        </nav>

                                    </div>

                                </div>
                                <div class="clearfix"></div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>

        </section>

        <section id="TapArea">
            <div class="clearfix"></div>
            <div class="taps">
                <div class="row">

                    <div class="col-lg-12 col-xs-12">
                        <div>
                            <div class="tab" role="tabpanel">
                                <!-- Nav tabs -->
                                <ul class="nav nav-tabs" role="tablist" style="padding-left:30px">
                                    <li role="presentation">
                                        @Html.ActionLink("Home", "Index", "Home")
                                    </li>

                                    <li role="presentation">
                                        @Html.ActionLink("Student", "Student", "Home")
                                    </li>
                                    <li role="presentation">
                                        @Html.ActionLink("Alumni", "Alumni", "Home")
                                    </li>
                                    <li role="presentation">
                                        @Html.ActionLink("Employee", "Employee", "Home")
                                    </li>
                                    <li role="presentation">
                                        @Html.ActionLink("Academic Staff", "AcademicStaff", "Home")
                                    </li>
                                    <li role="presentation">
                                        @Html.ActionLink("Applicant", "Applicant", "Home")
                                    </li>
                                </ul>

                            </div>


                            <div id="subApplicant" class="row list-inline collapse">
                                <div class="col-xs-12">
                                    <ul id="UlSubMenu" class="list-inline" style="padding-top: 7px;">
                                        <li>@Html.ActionLink("New Application", "NewApplication", "Applicant")</li>
                                        <li>@Html.ActionLink("Application Status", "ApplicationStatus", "Applicant")</li>
                                        <li>@Html.ActionLink("Qualification Exams Results", "QualificationExams", "Applicant")</li>
                                        <li>@Html.ActionLink("Up coming actions", "UpComingAction", "Applicant")</li>
                                        <li>@Html.ActionLink("Sent Messages", "SentMails", "Applicant")</li>
                                        <li>@Html.ActionLink("Application Payments", "ApplicationPayments", "Applicant")</li>
                                        <li>
                                            <div class="dropdown">
                                                <a href="#" class="dropdown-toggle" type="button" data-toggle="dropdown">
                                                    <i class="fa fa-bars" aria-hidden="true"></i>
                                                </a>
                                                <ul class="dropdown-menu pull-right">
                                                    <li>@Html.ActionLink("View My Application", "ViewApplication", "Applicant")</li>
                                                    <li>@Html.ActionLink("Attachments", "Attachments", "Applicant")</li>
                                                </ul>
                                            </div>
                                        </li>
                                    </ul>
                                </div>

                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section id="ContentArea" class="container">
            <div class="row">
                <div>
                    <!-- Tab panes -->
                    @RenderBody()
                </div>
            </div>
        </section>

        
    </form>

    <section id="leftCol">
        <!-- Start Section Tool Box -->

        <section class="">

            <div class="color-option">

                <div class="login" id="Login_Div">

                    <div class="panel gray">
                        <div class="panel-heading" style="border-bottom: 1px solid;">
                            <h3 class="panel-title border" style="font-weight: bold;">@ViewBag.Title</h3>
                            <span class="pull-right clickable"><i class="glyphicon glyphicon-play  rotate"></i></span>
                        </div>
                        <div class="panel-body gray ">

                            <div class="form-group">
                                <Label ID="LblUserName" for="exampleInputEmail1" Style="font-weight: normal; font-size: small">User Name</Label>
                                <input type="text" required class="form-control" ID="TxtEmail" placeholder="User Name" Style="height: 25px" />
                            </div>
                            <div class="form-group">
                                <Label ID="LblUserPassword" for="exampleInputPassword1" Style="font-weight: normal; font-size: small">Password</Label>
                                <input type="password" class="form-control" ID="txtPassword" placeholder="Password" Style="height: 25px" />
                            </div>

                            <div class="form-group">
                                <center>
                                    <input ID="btnLogin" type="submit" class="btn blue-button" style="width:90px" Text="Log In" OnClick="btnLogin_Click" />

                                </center>
                            </div>

                        </div>
                        <div class="divider">
                            <hr />
                        </div>
                        <div class="form-group">
                            <a ID="lnkForgotPassword" href="~/Registere/ForgotPassword" onclick="ForgotPassword()" Style="font-size: x-small"><span class="glyphicon glyphicon-play"></span>&nbsp;Forgot My Password</a>
                        </div>
                        <br />
                        <br />
                        <br />
                        <br />


                    </div>
                </div>

            </div>

            <i class="fa gear-check  gray"><i class="fa fa-play rotat"></i></i>
        </section>

        <!-- End Section Tool Box -->
    </section>
    <section align="center">
        <div class="container-fluid footer">

            <p>Sinai University</p>
        </div>
    </section>
    <script>
        function ForgotPassword() {
        var username = $("#TxtEmail").val()
            if (username == "") {
            return;
        }
            $("#TxtEmail").addAttribute("href", "~/Registere/ForgotPassword");
    }

    </script>
